<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SalaryCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_bg</item>
        <item name="colorPrimaryVariant">@color/primary_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Set status bar color to app background -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_bg</item>
        <!-- Make status bar icons light for dark bg -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
